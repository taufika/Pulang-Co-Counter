//- index.jade
- var title = "Counter Pulang"
- var page = "Homepage"

doctype html
html(lang="en")

    // html head
    include ./includes/head.jade

    // body
    body
        main
            h1.greeting Hi 
                span.name There
            h1.its It's
            h1.clock 4:00:00
            h1.gohome Before you go home!
            h1.gohome Cheers!
            
            .lunchbox
                button.fasting No thanks, I'm fasting
                button.diet I'm on a diet
                button.stillfull No thanks, I'm still full
            
        section.preference
            h1.title Hi, You're new aren't you?
            h2 Please let me know who you are
            input(type="text" placeholder="Nick Name").namefield
            input(type="number" placeholder="What time you start to work? (8/9/10)" min="8" max="10").startfield
            button.save Remember me!
            
        button.reset Not xx?
        
        
        // page script
        include ./includes/script.jade